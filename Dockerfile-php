FROM php:7.4-apache

# Instala extensiones necesarias para conectar a MySQL
RUN docker-php-ext-install mysqli pdo pdo_mysql

# Instala Composer (Administrador de paquetes de PHP)
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Establece el directorio de trabajo
WORKDIR /var/www/html

# Copia el archivo composer.json y composer.lock al contenedor
COPY composer.json composer.lock ./

# Instala las dependencias utilizando Composer
RUN composer install --no-dev --optimize-autoloader
